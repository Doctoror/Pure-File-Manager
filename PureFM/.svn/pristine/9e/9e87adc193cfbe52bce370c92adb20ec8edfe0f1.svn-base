<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.docd.purefm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_fso_folder"
        android:label="@string/app_name"
        android:theme="@style/ThemeLight"
        android:name=".PureFM">
        
        <activity
            android:name="com.docd.purefm.activities.BrowserActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:uiOptions="splitActionBarWhenNarrow"
            android:configChanges="orientation|screenSize" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <intent-filter>
        		<action android:name="android.intent.action.GET_CONTENT" />
        		<category android:name="android.intent.category.OPENABLE" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:mimeType="*/*" />
    		</intent-filter>
            
        </activity>
        
        <activity
            android:name="com.docd.purefm.activities.BookmarksActivity"
            android:label="@string/menu_bookmarks"
            android:logo="@drawable/action_bookmarks"
            android:configChanges="orientation|screenSize"/>
        
        <activity
            android:name="com.docd.purefm.activities.SearchActivity"
            android:label="@string/menu_search"
            android:logo="@drawable/action_search"
            android:configChanges="orientation|screenSize"/>
        
        <activity
            android:name="com.docd.purefm.activities.SettingsActivity"
            android:configChanges="orientation|screenSize"/>
        
    </application>

</manifest>