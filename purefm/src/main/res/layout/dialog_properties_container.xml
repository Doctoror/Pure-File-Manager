<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tabs_bg"
            android:checked="true"
            android:textAllCaps="true"
            android:textOff="@string/info"
            android:textOn="@string/info" />

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="#d6d6d6" />

        <ToggleButton
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tabs_bg"
            android:textAllCaps="true"
            android:textOff="@string/permissions"
            android:textOn="@string/permissions" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4.66667dp"
        android:background="@drawable/tab_shadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include layout="@layout/dialog_properties" />

            <include layout="@layout/dialog_permissions" />
        </ViewFlipper>
    </ScrollView>

</LinearLayout>